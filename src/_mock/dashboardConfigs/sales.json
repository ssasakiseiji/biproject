{
  "dashboardId": "sales",
  "name": "Ventas",
  "pages": [
    {
      "pageId": "overview",
      "name": "Resumen General",
      "grid": {
        "columns": 4,
        "rows": 5
      },
      "visuals": [
        {
          "id": "kpi_ingresos",
          "type": "kpi",
          "title": "Ingresos Totales",
          "data_source": "kpis.totalIngresos",
          "grid_position": { "x": 0, "y": 0, "w": 1, "h": 1 },
          "format": "currency"
        },
        {
          "id": "kpi_unidades",
          "type": "kpi",
          "title": "Unidades Totales",
          "data_source": "kpis.totalUnidadesVendidas",
          "grid_position": { "x": 1, "y": 0, "w": 1, "h": 1 }
        },
        {
          "id": "kpi_promedio",
          "type": "kpi",
          "title": "Venta Promedio",
          "data_source": "kpis.promedioVenta",
          "grid_position": { "x": 2, "y": 0, "w": 1, "h": 1 },
          "format": "currency",
          "precision": 2
        },
        {
          "id": "kpi_transacciones",
          "type": "kpi",
          "title": "Transacciones",
          "data_source": "kpis.totalTransacciones",
          "grid_position": { "x": 3, "y": 0, "w": 1, "h": 1 }
        },
        {
          "id": "chart_ingresos_categoria",
          "type": "interactive_pie_chart",
          "title": "Ingresos por Categoría",
          "api_endpoint": "ingresos_por_categoria",
          "grid_position": { "x": 0, "y": 1, "w": 2, "h": 2 },
          "filter_key": "categoria"
        },
        {
          "id": "chart_ingresos_region",
          "type": "interactive_bar_chart",
          "title": "Ingresos por Región",
          "api_endpoint": "ingresos_por_region",
          "grid_position": { "x": 2, "y": 1, "w": 2, "h": 2 },
          "filter_key": "region"
        },
        {
            "id": "table_transacciones",
            "type": "data_table",
            "title": "Detalle de Transacciones",
            "api_endpoint": "detalle_transacciones",
            "grid_position": { "x": 0, "y": 3, "w": 4, "h": 2 }
        }
      ]
    }
  ]
}